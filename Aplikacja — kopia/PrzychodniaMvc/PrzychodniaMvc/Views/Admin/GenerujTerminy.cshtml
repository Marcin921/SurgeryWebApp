@model PrzychodniaMvc.Models.BazaDanych.Lekarz

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Wprowadź przedział czasowy, w którym odbędą się wizyty</h4>
        <hr />

        <div class="form-group">
            @Html.Label("Data rozpoczęcia wizyt", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DataRozpWizyt, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Data zakończenia wizyt", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DataZakWizyt, new { htmlAttributes = new { @class = "form-control" } })
                <br>
                <input type="Submit" title="Zapisz" value="Generuj Terminy" class="btn btn-success", name="typ" />
            </div>
        </div>
    </div>
}

