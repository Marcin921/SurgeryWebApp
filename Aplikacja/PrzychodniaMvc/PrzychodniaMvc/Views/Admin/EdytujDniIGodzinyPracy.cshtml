@model IList<PrzychodniaMvc.Models.BazaDanych.DzienGodzinaPracyLekarza>

@{
    ViewBag.Title = "Lista dni i godzin pracy doktora";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Utwórz nowy dzień pracy", "UtworzDzienIGodzinePracy", "Admin", new { @id = this.ViewContext.RouteData.Values["id"], @generuj = false },  new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ToList()[0].DzienTygodnia)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ToList()[0].GodzinaRozp)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ToList()[0].GodzinaZak)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ToList()[0].CzasJednejWizyty)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DzienTygodnia)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GodzinaRozp)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GodzinaZak)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CzasJednejWizyty)
        </td>
        <td>
            @Html.ActionLink("Usun", "UsunDzienIGodzinePracy", new { id=item.IdDzienGodzina }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>

    if (Model.Count() != 0)
    {

   @Html.ActionLink("Przejdz do generowania terminow", "GenerujTerminy", "Admin", new { @id = this.ViewContext.RouteData.Values["id"]}, new { @class = "btn btn-primary" })
}
}

